<footer class="footer">
  <div class="footer__container container">
    <div class="footer__grid">
      <div class="footer__column footer__column--brand">
        <a href="/" class="footer__logo">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="footer__logo-image">
          {% else %}
            <span class="footer__logo-text">{{ shop.name }}</span>
          {% endif %}
        </a>
        <p class="footer__description">{{ section.settings.description }}</p>
        <div class="footer__social">
          {% if section.settings.social_facebook %}
            <a href="{{ section.settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
            </a>
          {% endif %}
          {% if section.settings.social_instagram %}
            <a href="{{ section.settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
            </a>
          {% endif %}
          {% if section.settings.social_twitter %}
            <a href="{{ section.settings.social_twitter }}" class="footer__social-link" target="_blank" rel="noopener">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/></svg>
            </a>
          {% endif %}
        </div>
      </div>
      
      <div class="footer__column">
        <h4 class="footer__heading">{{ section.settings.menu_1_title }}</h4>
        <ul class="footer__menu">
          {% for link in linklists[section.settings.menu_1].links %}
            <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <div class="footer__column">
        <h4 class="footer__heading">{{ section.settings.menu_2_title }}</h4>
        <ul class="footer__menu">
          {% for link in linklists[section.settings.menu_2].links %}
            <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <div class="footer__column footer__column--newsletter">
        <h4 class="footer__heading">{{ section.settings.newsletter_title }}</h4>
        <p class="footer__newsletter-text">{{ section.settings.newsletter_text }}</p>
        {% form 'customer', class: 'footer__newsletter-form' %}
          <input type="email" name="contact[email]" placeholder="Enter your email" class="footer__newsletter-input" required>
          <button type="submit" class="footer__newsletter-btn btn btn--primary">Subscribe</button>
        {% endform %}
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      <div class="footer__payment">
        {{ shop.enabled_payment_types | payment_type_svg_tag }}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Premium tech and lifestyle products for the modern consumer."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "Twitter URL"
    },
    {
      "type": "header",
      "content": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Menu Title",
      "default": "Shop"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "header",
      "content": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Menu Title",
      "default": "Help"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Stay Connected"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Subscribe for exclusive deals and updates."
    }
  ]
}
{% endschema %}
