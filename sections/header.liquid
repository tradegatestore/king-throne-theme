<header class="header">
  <div class="header__inner">
    <button class="header__menu-toggle" aria-label="Menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
    
    <a href="{{ routes.root_url }}" class="header__logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="header__logo-img">
      {% else %}
        <span class="header__logo-text">{{ shop.name }}</span>
      {% endif %}
    </a>
    
    <nav class="header__nav">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="header__nav-link{% if link.active %} active{% endif %}">{{ link.title }}</a>
      {% endfor %}
    </nav>
    
    <div class="header__actions">
      <button class="header__icon" aria-label="Search">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
      </button>
      <a href="{{ routes.account_url }}" class="header__icon" aria-label="Account">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
      </a>
      <a href="{{ routes.cart_url }}" class="header__icon header__cart" aria-label="Cart">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 01-8 0"/></svg>
        {% if cart.item_count > 0 %}<span class="header__cart-count">{{ cart.item_count }}</span>{% endif %}
      </a>
    </div>
  </div>
</header>

<style>
.header {
  background: linear-gradient(90deg, #01FE2D 0%, #19E8FC 100%);
  padding: 0 24px;
  border-radius: 0 0 40px 40px;
  margin: 0 16px;
  position: relative;
  z-index: 100;
}
.header__inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70px;
  max-width: 1400px;
  margin: 0 auto;
}
.header__menu-toggle {
  display: none;
  background: none;
  border: none;
  color: #000;
  cursor: pointer;
  padding: 8px;
}
.header__logo {
  display: flex;
  align-items: center;
}
.header__logo-text {
  font-size: 24px;
  font-weight: 800;
  color: #000;
  letter-spacing: 2px;
  text-transform: uppercase;
}
.header__logo-img {
  height: 40px;
  width: auto;
}
.header__nav {
  display: flex;
  gap: 32px;
}
.header__nav-link {
  color: #000;
  font-size: 14px;
  font-weight: 500;
  text-decoration: none;
  transition: opacity 0.2s;
}
.header__nav-link:hover {
  opacity: 0.7;
}
.header__actions {
  display: flex;
  align-items: center;
  gap: 16px;
}
.header__icon {
  color: #000;
  background: none;
  border: none;
  cursor: pointer;
  padding: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header__cart {
  position: relative;
}
.header__cart-count {
  position: absolute;
  top: -4px;
  right: -4px;
  background: #000;
  color: #fff;
  font-size: 10px;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
@media (max-width: 768px) {
  .header__menu-toggle { display: flex; }
  .header__nav { display: none; }
}
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
