<section class="faq">
  <div class="faq__container container">
    <div class="faq__header">
      <h2 class="faq__title">{{ section.settings.title }}</h2>
      <p class="faq__subtitle">{{ section.settings.subtitle }}</p>
    </div>
    
    <div class="faq__list">
      {% for block in section.blocks %}
        <div class="faq__item" {{ block.shopify_attributes }}>
          <button class="faq__question" aria-expanded="false">
            <span>{{ block.settings.question }}</span>
            <svg class="faq__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
          </button>
          <div class="faq__answer" hidden>
            <p>{{ block.settings.answer }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .faq {
    padding: 80px 0;
    background: var(--color-background);
  }
  
  .faq__header {
    text-align: center;
    margin-bottom: 48px;
  }
  
  .faq__title {
    font-size: clamp(32px, 5vw, 48px);
    margin-bottom: 16px;
  }
  
  .faq__subtitle {
    color: rgba(255,255,255,0.7);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .faq__list {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .faq__item {
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }
  
  .faq__question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 0;
    background: none;
    border: none;
    color: var(--color-text);
    font-size: 18px;
    font-weight: 500;
    cursor: pointer;
    text-align: left;
  }
  
  .faq__icon {
    flex-shrink: 0;
    transition: transform 0.3s;
  }
  
  .faq__item.active .faq__icon {
    transform: rotate(45deg);
  }
  
  .faq__answer {
    padding-bottom: 24px;
    color: rgba(255,255,255,0.7);
    line-height: 1.7;
  }
  
  .faq__answer[hidden] {
    display: none;
  }
</style>

<script>
  document.querySelectorAll('.faq__question').forEach(btn => {
    btn.addEventListener('click', () => {
      const item = btn.parentElement;
      const answer = item.querySelector('.faq__answer');
      const isOpen = item.classList.contains('active');
      
      item.classList.toggle('active');
      btn.setAttribute('aria-expanded', !isOpen);
      answer.hidden = isOpen;
    });
  });
</script>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find answers to common questions about our products and services."
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "blocks": [
        { "type": "question", "settings": { "question": "What is your shipping policy?", "answer": "We offer free shipping on orders over $100. Standard shipping takes 5-7 business days." } },
        { "type": "question", "settings": { "question": "What is your return policy?", "answer": "We accept returns within 30 days of purchase. Items must be in original condition." } },
        { "type": "question", "settings": { "question": "Do you offer warranty?", "answer": "Yes, all products come with a 1-year manufacturer warranty." } }
      ]
    }
  ]
}
{% endschema %}
