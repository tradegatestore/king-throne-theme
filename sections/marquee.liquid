<section class="marquee-bar">
  <div class="marquee-bar__track">
    <div class="marquee-bar__content">
      {% for block in section.blocks %}
        <span class="marquee-bar__icon">⚡</span>
        <span class="marquee-bar__text">{{ block.settings.text }}</span>
      {% endfor %}
    </div>
    <div class="marquee-bar__content" aria-hidden="true">
      {% for block in section.blocks %}
        <span class="marquee-bar__icon">⚡</span>
        <span class="marquee-bar__text">{{ block.settings.text }}</span>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.marquee-bar {
  background: #fff;
  padding: 16px 0;
  overflow: hidden;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.marquee-bar__track {
  display: flex;
  animation: marquee-scroll 30s linear infinite;
}
.marquee-bar__content {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  gap: 8px;
}
.marquee-bar__icon {
  color: #F59E0B;
  font-size: 18px;
  margin: 0 16px;
}
.marquee-bar__text {
  color: #000;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  white-space: nowrap;
}
@keyframes marquee-scroll {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
.marquee-bar:hover .marquee-bar__track {
  animation-play-state: paused;
}
</style>

{% schema %}
{
  "name": "Marquee Bar",
  "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Text Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "FLASH DEALS"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Bar",
      "blocks": [
        { "type": "text", "settings": { "text": "FLASH DEALS" } },
        { "type": "text", "settings": { "text": "SAVE BIG TODAY!" } },
        { "type": "text", "settings": { "text": "HOT PICKS" } },
        { "type": "text", "settings": { "text": "UPGRADE TODAY" } },
        { "type": "text", "settings": { "text": "POWERFUL SOUND" } }
      ]
    }
  ]
}
{% endschema %}
